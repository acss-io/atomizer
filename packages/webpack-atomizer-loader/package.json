{
    "name": "webpack-atomizer-loader",
    "version": "1.3.2",
    "description": "Webpack loader for compiling atomic css",
    "main": "index.js",
    "scripts": {
        "example": "cd example && webpack && open index.html && cd ..",
        "build": "tsc",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "prepublish": "npm run build",
        "pretest": "npm run build",
        "test": "mocha tests"
    },
    "keywords": [
        "atomizer",
        "atomic",
        "css",
        "loader",
        "webpack"
    ],
    "author": "tom76kimo <tom76kimo@gmail.com> ",
    "license": "MIT",
    "dependencies": {
        "atomizer": "^3.9.2",
        "cssnano": "^5.0.7",
        "loader-utils": "^2.0.0",
        "postcss": "^8.3.6"
    },
    "repository": {
        "directory": "webpack-atomizer-loader",
        "type": "git",
        "url": "git://github.com/acss-io/atomizer.git"
    },
    "files": [
        "dist",
        "*.js"
    ]
}
